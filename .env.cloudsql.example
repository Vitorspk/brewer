# GCP Cloud SQL Configuration Template
# Copy this file to .env.cloudsql and fill with your actual credentials
# NEVER commit .env.cloudsql to version control!

# Cloud SQL Connection Name (format: PROJECT:REGION:INSTANCE)
CLOUDSQL_CONNECTION_NAME=vschiavo-home:southamerica-east1:brewer-db

# Cloud SQL Public IP Address
CLOUDSQL_PUBLIC_IP=<YOUR_CLOUDSQL_PUBLIC_IP>

# Database Credentials
CLOUDSQL_USER=admin
CLOUDSQL_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Database Names
CLOUDSQL_DATABASE=brewer
CLOUDSQL_TEST_DATABASE=brewer_test

# JDBC Connection URLs
DATABASE_URL=jdbc:mysql://<YOUR_CLOUDSQL_PUBLIC_IP>:3306/brewer?useSSL=true&requireSSL=true&serverTimezone=UTC
TEST_DB_URL=jdbc:mysql://<YOUR_CLOUDSQL_PUBLIC_IP>:3306/brewer_test?useSSL=true&requireSSL=true&serverTimezone=UTC

# For local development via Cloud SQL Proxy
# DATABASE_URL=jdbc:mysql://127.0.0.1:3306/brewer?useSSL=false
# TEST_DB_URL=jdbc:mysql://127.0.0.1:3306/brewer_test?useSSL=false